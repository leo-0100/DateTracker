{
  "name": "shelfguard-backend",
  "version": "1.0.0",
  "description": "Backend API for ShelfGuard product expiry tracking app",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:migrate": "node src/utils/runMigrations.js",
    "db:seed": "node src/utils/seedDatabase.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "expiry-tracking",
    "inventory",
    "notifications"
  ],
  "author": "ShelfGuard Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "firebase-admin": "^12.0.0",
    "csv-parser": "^3.0.0",
    "json2csv": "^6.0.0",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
